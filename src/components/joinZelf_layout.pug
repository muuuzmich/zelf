        -let mob_header_close = true
        include ../components/single-page-header
        .pageAlign.referalPage#referalPage
            .referalWindow
                .gif-mobile
                    video(src="../assets/img/Card_rotate_final.mp4" autoplay muted loop playsinline)
                .referalWindow__title
                    span=loc.zelf.title[0]
                    span.no-wrap
                        span.zelfInline
                            video(src="../assets/img/Card_rotate_final.mp4" autoplay muted loop playsinline)
                        |&emsp;<span>#{loc.zelf.title[1].split(' ')[0]}</span>&nbsp;
                    span #{loc.zelf.title[1].split(' ').slice(1).join(' ')}
                .referalWindow__content
                    .qr
                        p=loc.zelf.scan
                        .qr-code
                            img(src='../assets/img/'+loc.loc+'-qr.jpg')
                    .messenger
                        p.hide-mobile=loc.zelf.messenger
                        p.show-mobile=loc.zelf.mobile
                        ul.messenger-list
                            include ../components/bots_link
        .referal__footer
            .referal__footer__small=loc.zelf.footer
            footer
                p !{loc.terms}
